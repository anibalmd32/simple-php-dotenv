{
    "name": "anibalmd32/simple-php-dotenv",
    "description": "PHP Script for get environment variables from an .env file and set on the php local environment",
    "homepage": "https://github.com/anibalmd32/simple-php-dotenv",
    "keywords": [
        "dotenv",
        "environment",
        "variables",
        "php",
        "simple"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "*"
    },
    "autoload": {
        "psr-4": {
            "SimplePhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Anibal Mendoza",
            "email": "anibalmd32@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyze": "phpstan analyze src --level=7",
        "test:init": "./vendor/bin/pest --init",
        "test:run": "./vendor/bin/pest"
    }
}